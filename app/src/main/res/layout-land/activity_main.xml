<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="horizontal"
    tools:context="droidtech.com.droidscilloscope.MainActivity">


    <com.androidplot.xy.XYPlot
        android:id="@+id/mySimpleXYPlot"
        android:paddingTop="30dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:legendTextSize="15sp"
        app:legendIconHeight="0dp"
        app:legendIconWidth="0dp"
        app:legendHeight="25dp"
        android:layout_weight="30"
        android:clickable="true"
        android:onClick="onClick"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="70"

        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0dp"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textlbl1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Seg/DIV"
                        android:textSize="4pt"
                        android:layout_gravity="center"
                        android:textColor="#ffffff"
                        android:visibility="visible"
                        android:layout_marginBottom="0dp"
                        />
                    <NumberPicker
                        android:layout_marginTop="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/np"
                        android:theme="@style/AppTheme"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:orientation="vertical"
                    >

                    <RadioGroup
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_gravity="left"
                        android:id="@+id/rgSignalType"
                        >

                        <RadioButton

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AC"
                            android:textColor="#ffffff"
                            android:id="@+id/rbAC"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:layout_marginLeft="0dp"
                            />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DC"
                            android:id="@+id/rbDC"
                            android:textColor="#ffffff"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:checked="true"
                            />
                    </RadioGroup>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="40"
                    >
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/modGroup"
                        >

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ch1"
                            android:id="@+id/rbc1"
                            android:layout_margin="0dp"
                            android:textColor="#ffffff"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ch2"
                            android:id="@+id/rbc2"
                            android:textColor="#ffffff"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dual"
                            android:id="@+id/rbd"
                            android:textColor="#ffffff"
                            android:layout_margin="0dp"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:checked="true"
                            />

                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>
